<div class="section">
  <div class="container">
    <div class="row">
    <div class="col-sm-12">
    <%= render partial: "layouts/flash_messages", flash: flash %>
      <div class="blog-post blog-single-post">
        <div class="single-post-title">
          <h3>Order Detail</h3>
        </div>
        <div class="single-post-info">
          <i class="glyphicon"></i>
        </div>
        
        <div class="single-post-content">
          <div class="bs-example">
          <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dashboard_user">
            <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Total Amount</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>  
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody> 
                  <tr>
                    <td><%= @order.id %></td>
                    <td><%= @order.created_at %></td>
                    <td><%= @order.amount %></td>
                    <td><%= @order.name %></td>
                    <td><%= @order.last_name %></td>
                    <td><%= @order.email %></td>
                    <td><%= @order.order_status%></td>
                  
                  </tr>
                </tbody>
            
          </table>
          </div>
        </div>
      </div>
    </div>    
    </div>

    <div class="row">
      <div class="col-md-12">
      <table class="shopping-cart">
        <% @base_carts.each do |base_cart|%>
        <% product = get_product_detail(base_cart.product_id)%>
        <tr>
          <td class="image"><a href="#">
            <%= image_tag product.image.url %></a></td>
            <!-- Shopping Cart Item Description & Features -->
          <td>
          <td>
            <div class="cart-item-title"><a href="#">
            <%= product.name %></a></div>
            <div class="feature">Size: <b><%= product.size%></b></div>
          </td>
          <td class="feature">
           <b>Quantity : </b><%= base_cart.quantity   %>
          </td>
          <td class="feature">
           <b>Price : </b><%= product.price *  base_cart.quantity  %>
          </td>

        </tr>    
        <% end %>
      </table>
      </div>
    </div>

    <div class="row">
    <div class="col-sm-12">
      <div class="blog-post blog-single-post">
        <div class="single-post-title">
          <h3>Shipping Address</h3>
        </div>
        <div class="single-post-info">
          <i class="glyphicon"></i>
        </div>
        
        <div class="single-post-content">
          <div class="bs-example col-sm-offset-1">
              <h3><%= @ship_address.first_name %> &nbsp; <%= @ship_address.last_name %></h3><br>
             <%= @ship_address.address %>  <br>
              <%= @ship_address.city %> <br>
              <%= @ship_address.state %> <br>
             <b> Pin : <%= @ship_address.pin %> <br>
               Phone : <%= @ship_address.phone_number %>
              </b>
          </div>
        </div>
      </div>
    </div>    
    </div>




  </div>
</div>


