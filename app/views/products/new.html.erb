
<div class="section">
  <div class="container">
    <div class="row">
      <!-- Sidebar -->
        <%= render :partial => "layouts/admin_sidebar"%>
      <!-- End Sidebar -->
      <div class="col-sm-10">
      <%= render partial: "layouts/flash_messages", flash: flash %> 
        <div class="blog-post blog-single-post">
          <div class="single-post-title">
            <h3>New Products</h3>
          </div><br>
          <div class="single-post-info">
         
          <i class="glyphicon"></i>
            
            <%= link_to 'Cancel', products_path , :class=> "pull-right" %>
          </div>
          
          <div class="single-post-content">
            <div class="bs-example">
            <%= form_for(@product,:html => { :multipart => true, :class=>"form-horizontal", :role=>"form" } ) do |f| %>	
               <div class="row">
               	<div class="col-sm-6">

               	  <div class="form-group">
				    <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
				    <div class="col-sm-10">
				      <%= f.text_field :name,:required => true, :class => "form-control", :placeholder=>"Name" %>
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Price</label>
				    <div class="col-sm-10">
				      <%= f.text_field :price,:required => true, :class => "form-control", :placeholder=>"Price" %>
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Stock</label>
				    <div class="col-sm-10">
				      <%= f.number_field :stock,:required => true, :class => "form-control", :placeholder=>"Total Stock" %>
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Brand</label>
				    <div class="col-sm-10">
				      <%= f.text_field :manufacturer, :class => "form-control", :placeholder=>"Brand" %>
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Menu Item</label>
				    <div class="col-sm-10">
				    <%= f.select(:menu_category_id, @menu_categories.collect {|p| [ p.menu_text, p.id ] }, {}, {required: 'true', class: 'form-control'}) %>				    
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Category</label>
				    <div class="col-sm-10" id="category_select">
				    <%= f.select(:category_id, @categories.collect {|p| [ p.category_name, p.id ] }, {}, {required: 'true', class: 'form-control', disabled:'true'}) %>
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Sub Category</label>
				    <div class="col-sm-10" id="sub_category_select">
				    <%= f.select(:sub_category_id, @sub_categories.collect {|p| [ p.sub_category_name, p.id ] }, {}, {required: 'true', class: 'form-control', disabled:'true'}) %>
				    </div>
				  </div>	

               	</div>
               	<div class="col-sm-6">
           		  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Description</label>
				    <div class="col-sm-10">
				      <%= f.text_area :description, :class => "form-control" %>
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Features List</label>
				    <div class="col-sm-10">
				      <%= f.text_area :feature_list, :class => "form-control" %>
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Size</label>
				    <div class="col-sm-10">
				       <%= f.text_field :size, :class => "form-control", :placeholder=>"Size" %>
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Image</label>
				    <div class="col-sm-10">
				       <%= f.file_field :image %>
				    </div>
				  </div>

               	</div>
               </div>

               <div class="row">
               	<div class="col-sm-6 col-sm-offset-6">
               		<button type="submit" class="btn btn-success">Create Product</button>
               	</div>
               </div>

			<% end %>
            </div>
          </div>
        </div>        				 
	        		
      </div>
      <!-- End Blog Post -->
    </div>
  </div>

  <script type="text/javascript" src="js/script.js"></script>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

  <script type="text/javascript">


$("#product_menu_category_id").change(function() {
	jQuery.get('/products/update_category_select?id=' + $("#product_menu_category_id").val(), function(data){
        $("#category_select").html(data);
    });
});


</script>
</div>