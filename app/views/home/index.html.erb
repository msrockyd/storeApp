<div class="section">
    <div class="container">

        <div class="row">
                <%= render partial: "layouts/flash_messages", flash: flash %> 
        <% @products.each_with_index do |product,index| %>
            <div class="col-sm-4">
                <!-- Product -->
                <div class="shop-item">
                    <!-- Product Image -->
                    <div class="image">
                        <a href="/products/<%= product.id%>">
                            <%= image_tag product.image.url(:thumb) %>
                            <!-- <img src="img/product1.jpg" alt="Item Name"> -->
                        </a>
                    </div>
                    <!-- Product Title -->
                    <div class="title">
                        <h3><a href="/products/<%= product.id%>"><%= product.name %></a></h3>
                    </div>
                    <!-- Product Available Colors-->
                    <div class="colors" style="color: orange">
                        <% if product.stock <= 3 %>
                            <% if  product.stock <= 0%>
                                <b> Out of stock</b>
                            <%else%>
                                <b>Only <%= product.stock %> Left !! </b>
                            <%end%>
                        <% end %>
                        
                        
                    </div>
                    <!-- Product Price-->
                    <div class="price">
                        <span class="price-was"></span> $<%= product.price %>
                    </div>
                    <!-- Product Description-->
                    <div class="description">
                        <p><%= product.description[0,152] %> ... </p>
                    </div>
                    <!-- Add to Cart Button -->
                    <div class="actions">
                        <% if product.stock > 0%>
                     
                        <a href="/carts/send_products_id?product_id=<%= product.id %>" class="btn btn-primary"><i class="icon-shopping-cart icon-white"></i> Add to Cart</a>
                        
                        <%end%>
                        <a href="/products/<%= product.id%>" class="btn btn-info"><i class="icon-shopping-cart icon-white"></i> Product Detail</a>
                    </div>
                </div>
                <!-- End Product -->
            </div>
            <% if ((index+1)%3).eql?(0) %>
            </div>  
            <div class="row">
            <% end %>
        <% end %>   
        </div>

        <div class="pagination-wrapper">
            <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
        </div>

    </div>
</div>