<div class="section">
  <div class="container">
    <div class="row">
      <!-- Sidebar -->
        <%= render :partial => "layouts/admin_sidebar"%>
      <!-- End Sidebar -->
      <div class="col-sm-10">
        <div class="blog-post blog-single-post">
          <div class="single-post-title">
            <h3>Admin User List</h3>
          </div>
          <div class="single-post-info">
            <i class="glyphicon"></i>
            <%= link_to 'New Admin user', new_admin_user_path, :class=> "pull-right" %>
          </div>
          
          <div class="single-post-content">
            <div class="bs-example">
                <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dashboard_user">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>action</th>
                        </tr>
                    </thead>
                    <tbody>
                      <%if @admin_users.blank?%>
                      No record to display
                      <% else %>
                      <% @admin_users.each do |admin_user|%>
                        <tr>
                            <td><%= admin_user.first_name.capitalize %></td>
                            <td><%= admin_user.last_name.capitalize %></td>
                            <td><%= admin_user.email %></td>
                            <td><%= link_to 'Destroy', admin_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <%end%>
                        <% end %>
                    </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
      <!-- End Blog Post -->
    </div>
  </div>
</div>