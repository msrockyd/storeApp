<div class="section">
  <div class="container">
    <div class="row">
      <!-- Sidebar -->
        <%= render :partial => "layouts/admin_sidebar"%>
      <!-- End Sidebar -->
      <div class="col-sm-10">
      <%= render partial: "layouts/flash_messages", flash: flash %> 
        <div class="blog-post blog-single-post">
          <div class="single-post-title">
            <h3>Sub Category List</h3>
          </div><br>
          <div class="single-post-info">
          <i class="glyphicon"></i>
            <%= link_to 'New Sub category', new_sub_category_path, :class=> "pull-right" %>
          </div>
          
          <div class="single-post-content">
            <div class="bs-example">
                <!-- <table class="table"> -->
                <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dashboard_user">
                    <thead>
                        <tr>
                          <th>Sub category name</th>
                          <th>Category</th>
                          <th></th>
                          <th></th>
                        </tr>
                    </thead>
                    <tbody>
                       <% @sub_categories.each do |sub_category| %>
                          <tr>
                            <td><%= sub_category.sub_category_name %></td>
                            <td><%= show_category_text(sub_category.category_id) %></td>
                            <td><%= link_to 'Edit', edit_sub_category_path(sub_category) %></td>
                            <td><%= link_to 'Destroy', sub_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
      <!-- End Blog Post -->
    </div>
  </div>
</div>
