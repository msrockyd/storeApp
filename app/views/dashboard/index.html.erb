<div class="section">
	<div class="container">
		<div class="row">
			<!-- Sidebar -->
				<%= render :partial => "layouts/admin_sidebar"%>
			<!-- End Sidebar -->
			<div class="col-sm-10">
				<div class="blog-post blog-single-post">
					<div class="single-post-title">
						<h3>New Users List</h3>
					</div>
					
					<div class="single-post-content">
						<div class="bs-example">
						    <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dashboard_user">
						        <thead>
						            <tr>
						                <th>Email</th>
						                <th>Created at</th>
						                <th>Sign in count</th>
						            </tr>
						        </thead>
						        <tbody>
						        	<%if @users.blank?%>
						        	No record to display
						        	<% else %>
						        	<% @users.each do |user|%>
						            <tr>
						                <td><%= user.email %></td>
						                <td><%= user.created_at %></td>
						                <td><%= user.sign_in_count %></td>
						                
						            </tr>
						            <%end%>
						            <% end %>
						        </tbody>
						    </table>
						</div>
					</div>
				</div>
			</div>
			<!-- End Blog Post -->

			<div class="col-sm-10">
				<div class="blog-post blog-single-post">
					<div class="single-post-title">
						<h3>New Orders List</h3>
					</div>
					
					<div class="single-post-content">
						<div class="bs-example">
						    <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dashboard_user">
						        <thead>
						            <tr>
						                <th>Order ID</th>
						                <th>Email</th>
						                <th>Amount</th>
						            </tr>
						        </thead>
						        <tbody>
						        	<%if @orders.blank?%>
						        	No record to display
						        	<% else %>
						        	<% @orders.each do |order|%>
						            <tr>
						                <td><%= order.id %></td>
						                <td><%= order.email %></td>
						                <td><%= order.amount %></td>
						                
						            </tr>
						            <%end%>
						            <% end %>
						        </tbody>
						    </table>
						</div>
					</div>
				</div>
			</div>
			<!-- End Blog Post -->
		</div>
	</div>
</div>