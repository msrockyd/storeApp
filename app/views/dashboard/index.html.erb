<div class="section">
	<div class="container">
		<div class="row">
			<!-- Sidebar -->
				<%= render :partial => "layouts/admin_sidebar"%>
			<!-- End Sidebar -->
			<div class="col-sm-10">
				<div class="blog-post blog-single-post">
					<div class="single-post-title">
						<h3>User List</h3>
					</div>
					<div class="single-post-info">
						<i class="glyphicon"></i>
					</div>
					
					<div class="single-post-content">
						<div class="bs-example">
						    <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dashboard_user">
						        <thead>
						            <tr>
						                <th>First Name</th>
						                <th>Last Name</th>
						                <th>Email</th>
						                <th>action</th>
						            </tr>
						        </thead>
						        <tbody>
						        	<%if @admin_users.blank?%>
						        	No record to display
						        	<% else %>
						        	<% @admin_users.each do |user|%>
						            <tr>
						                <td><%= user.first_name.capitalize %></td>
						                <td><%= user.last_name.capitalize %></td>
						                <td><%= user.email %></td>
						                <td><%= link_to "Edit"%> &nbsp;<%= link_to "Delete"%></td>
						            </tr>
						            <%end%>
						            <% end %>
						        </tbody>
						    </table>
						</div>
					</div>
				</div>
			</div>
			<!-- End Blog Post -->
		</div>
	</div>
</div>