<div class="section">
  <div class="container">
    <div class="row">
      <!-- Sidebar -->
        <%= render :partial => "layouts/admin_sidebar"%>
      <!-- End Sidebar -->
      <div class="col-sm-10">
        <div class="blog-post blog-single-post">
          <div class="single-post-title">
            <h3>Menu Category List</h3>
          </div><br>
          <div class="single-post-info">
          <i class="glyphicon"></i>
            <%= link_to 'New Menu category', new_menu_category_path, :class=> "pull-right" %>
          </div>
          
          <div class="single-post-content">
            <div class="bs-example">
                <!-- <table class="table"> -->
                <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dashboard_user">
                    <thead>
                        <tr>
                            <th>Menu text</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                      <% @menu_categories.each do |menu_category|%>
                        <tr>
                          <td><%= menu_category.menu_text %></td>
                          <td><%= link_to 'Edit', edit_menu_category_path(menu_category) %></td>
                          <td><%= link_to 'Destroy', menu_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <%end%>
                    </tbody>
                </table>
            </div>
          </div>
        </div>
      </div>
      <!-- End Blog Post -->
    </div>
  </div>
</div>
