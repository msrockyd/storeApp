<div class="section">
	<div class="container">
						

		<div class="row">
		<div class="col-sm-2 blog-sidebar">
				<br/>
				<h4>User Profile</h4>
				<ul class="recent-posts">
					<li><span class="glyphicon glyphicon-user"></span> <a href="/user_details">My Profile</a></li>
					<li><span class="glyphicon glyphicon-inbox"></span> <a href="/order_detail/index">My Orders</a> </li>
					<li><span class="glyphicon glyphicon-log-out"> </span> <%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
				</ul>
			</div>
		<div class="col-sm-10">
			<%= render partial: "layouts/flash_messages", flash: flash %>
		
			<div class="blog-post blog-single-post">
				<div class="single-post-title">
					<h3>My Order List</h3>
				</div>
				<div class="single-post-info">
					<i class="glyphicon"></i>
				</div>
				
				<div class="single-post-content">
					<div class="bs-example">
					<table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dashboard_user">
						<thead>
				            <tr>
				                <th>Order Date</th>
				                <th>Total Amount</th>
				                <th>First Name</th>
				                <th>Last Name</th>
				                <th>Email</th>
				                <th>Detail</th>
				            </tr>
				        </thead>
				        <tbody>	
				        <% @orders.each do |order|%>
				        	<tr>
				        	
				        		<td><%= order.created_at %></td>
				        		<td><%= order.amount %></td>
				        		<td><%= order.name %></td>
				        		<td><%= order.last_name %></td>
				        		<td><%= order.email %></td>
				        		<td><%= link_to "See Detail", controller: "orders", action: "show", id: order.id%></td>
				        	
				        	</tr>
				        <% end %>
				        </tbody>
						
					</table>
					</div>
				</div>
			</div>
		</div>		
		</div>
	</div>
</div>