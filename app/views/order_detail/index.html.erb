<div class="section">
	<div class="container">
		<div class="row">
		<div class="col-sm-12">
			<div class="blog-post blog-single-post">
				<div class="single-post-title">
					<h3>Order List</h3>
				</div>
				<div class="single-post-info">
					<i class="glyphicon"></i>
				</div>
				
				<div class="single-post-content">
					<div class="bs-example">
					<table class="table table-striped table-bordered" cellspacing="0" width="100%" id="dashboard_user">
						<thead>
				            <tr>
				                <th>Order Date</th>
				                <th>Total Amount</th>
				                <th>First Name</th>
				                <th>Last Name</th>
				                <th>Email</th>
				                <th>Detail</th>
				            </tr>
				        </thead>
				        <tbody>	
				        <% @orders.each do |order|%>
				        	<tr>
				        	
				        		<td><%= order.created_at %></td>
				        		<td><%= order.amount %></td>
				        		<td><%= order.name %></td>
				        		<td><%= order.last_name %></td>
				        		<td><%= order.email %></td>
				        		<td><%= link_to "See Detail", controller: "orders", action: "show", id: order.id%></td>
				        	
				        	</tr>
				        <% end %>
				        </tbody>
						
					</table>
					</div>
				</div>
			</div>
		</div>		
		</div>
	</div>
</div>